                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/title_painting_11"
                    android:scaleType="centerCrop"
                    android:src="@drawable/opera_11"
